<Project>
    <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory)..\, Directory.Build.props))\Directory.Build.props"/>

    <PropertyGroup>
        <VersionPrefix>0.0.0</VersionPrefix>

        <Title>Wangkanai Federation</Title>
        <PackageTags>aspnetcore;identity;federation;</PackageTags>
        <Description>OAuth 2.0 and OpenID Connect Framework for ASP.NET Core for Authentication and Authorization with flexible permission policy.</Description>

    </PropertyGroup>

    <PropertyGroup Condition="'$(MSBuildProjectName)' == 'Wangkanai.Federation'">
        <PackageIcon>federation-logo.png</PackageIcon>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup Condition="'$(MSBuildProjectName)' == 'Wangkanai.Federation'">
        <None Include="..\..\assets\federation-logo.png" Pack="true" PackagePath="\"/>
        <None Include="..\..\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>
</Project>
