<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup Condition="'$(DotNetWatchBuild)'=='true'">
        <Watch Include="**/*.css;**/*.scss;**/*.jpg" Exclude="node_modules/**;**/*.js.map;**/*.css.map;obj/**/*;bin/**/*" />
    </ItemGroup>

    <ItemGroup>
      <_ContentIncludedByDefault Remove="wwwroot\css\site.css" />
    </ItemGroup>

    <Target Name="NpmInstall" Inputs="package.json" Outputs="node_modules/.install-stamp">
        <Message Text=" npm install" Importance="high" />
        <Exec Command="npm ci" Condition="$(RestorePackagesWithLockFile) == 'true'" />
        <Exec Command="npm install" Condition="$(RestorePackagesWithLockFile) != 'true'" />
        <Touch Files="node_modules/.install-stamp" AlwaysCreate="true" />
    </Target>
    <Target Name="NpmRunBeforeTargetsCompile" DependsOnTargets="NpmInstall" BeforeTargets="Compile">
        <Message Text=" BeforeTargets=Compile: npm run scss" Importance="high" />
        <Exec Command="npm run --silent scss" />
    </Target>
</Project>
