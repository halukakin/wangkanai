{
    "name": "wangkanai",
    "version": "1.0.0",
    "description": "Wangkanai Web Design Framework",
    "author": "Sarin Na Wangkanai",
    "license": "ISC",
    "private": true,
    "style": "wwwroot/dist/wangkanai.css",
    "sass": "wwwroot/scss/wangkanai.scss",
    "scripts": {
        "scss": "npm-run-all scss-compile scss-minify",
        "scss-compile": "sass --style expanded --source-map --embed-sources --no-error-css wwwroot/scss/wangkanai.scss wwwroot/dist/wangkanai.css",
        "scss-minify": "cleancss -O1 wwwroot/dist/wangkanai.css --output wwwroot/dist/wangkanai.min.css --input-source-map wwwroot/dist/wangkanai.css.map --format breakWith=lf --with-rebase",
        "watch": "npm-run-all --parallel watch-scss",
        "watch-scss": "nodemon --watch wwwroot/scss/ --ext scss --exec \"npm-run-all scss-compile scss-minify\"",
        "watch-scss-lint": "nodemon --watch wwwroot/scss/ --ext scss --exec \"npm-run-all scss-lint scss-compile\"",
        "clean": "npm-run-all --parallel clean-*",
        "clean-dist": "rimraf wwwroot/dist/",
        "clean-lib": "rimraf wwwroot/lib/",
        "lib": "npm-run-all --parallel lib-*",
        "lib-bootstrap": "cpy node_modules/bootstrap/dist/**/*.* wwwroot/lib/bootstrap/dist",
        "lib-jquery": "cpy node_modules/jquery/dist/**/*.* wwwroot/lib/jquery/dist",
        "lib-jquery-validation": "cpy node_modules/jquery-validation/dist/**/*.* wwwroot/lib/jquery-validation/dist",
        "lib-jquery-validation-unobtrusive": "cpy node_modules/jquery-validation-unobtrusive/dist/**/*.* wwwroot/lib/jquery-validation-unobtrusive/dist"
    },
    "dependencies": {
        "bootstrap": "^5.2.3",
        "jquery": "^3.6.4",
        "jquery-validation": "^1.19.5",
        "jquery-validation-unobtrusive": "^4.0.0",
        "rfs": "^10.0.0"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.14",
        "clean-css-cli": "^5.6.2",
        "find-unused-sass-variables": "^5.0.0",
        "nodemon": "^2.0.22",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.23",
        "postcss-cli": "^10.1.0",
        "sass": "^1.62.1",
        "stylelint": "^15.6.1",
        "stylelint-config-recommended-scss": "^11.0.0",
        "stylelint-config-twbs-bootstrap": "^10.0.0"
    }
}
